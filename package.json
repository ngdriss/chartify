{
  "name": "ng-figma-plugin-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for creating figma plugins using angular",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build && webpack",
    "watch:ng": "ng build --watch",
    "watch:webpack": "webpack --watch",
    "watch": "npm run watch:ng && npm run watch:webpack",
    "test": "ng test"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.3.4",
    "@angular/cdk": "^17.3.4",
    "@angular/common": "^17.3.4",
    "@angular/compiler": "^17.3.4",
    "@angular/core": "^17.3.4",
    "@angular/forms": "^17.3.4",
    "@angular/material": "^17.3.4",
    "@angular/platform-browser": "^17.3.4",
    "@angular/platform-browser-dynamic": "^17.3.4",
    "@angular/router": "^17.3.4",
    "d3": "^7.9.0",
    "d3-path": "^3.1.0",
    "d3-random": "^3.0.1",
    "d3-scale": "^4.0.2",
    "lucide-angular": "^0.368.0",
    "rxjs": "~6.6.0",
    "tslib": "^2.1.0",
    "zone.js": "~0.14.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.3.4",
    "@angular/cli": "^17.3.4",
    "@angular/compiler-cli": "^17.3.4",
    "@figma/plugin-typings": "^1.92.0",
    "@types/d3": "^7.4.3",
    "@types/d3-path": "^3.1.0",
    "@types/d3-random": "^3.0.3",
    "@types/d3-scale": "^4.0.8",
    "@types/jasmine": "~3.6.0",
    "@types/node": "^12.11.1",
    "@typescript-eslint/eslint-plugin": "^7.6.0",
    "@typescript-eslint/parser": "^7.6.0",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "html-webpack-plugin": "^5.5.0",
    "jasmine-core": "~3.8.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.6.0",
    "postcss": "^8.4.38",
    "react-dev-utils": "^12.0.1",
    "tailwindcss": "^3.4.3",
    "ts-loader": "^9.3.1",
    "typescript": "~5.4.5",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@figma/figma-plugins/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "root": true,
    "rules": {
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_",
          "caughtErrorsIgnorePattern": "^_"
        }
      ]
    }
  }
}
